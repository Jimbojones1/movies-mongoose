<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
	<nav>
		<img src="/images/camera.svg">
		  <a href="/performers/new">ADD PERFORMER</a>
		  <a href="/movies/new">ADD MOVIE</a>
		  <a href="/movies">ALL MOVIES</a>
	  </nav>
	<main>
		<section id="show-page">
			<div>Title: </div>
			<div>
				<%= movie.title %>
			</div>
			<div>Release Year: </div>
			<div>
				<%= movie.releaseYear %>
			</div>
			<div>Rating: </div>
			<div>
				<%= movie.mpaaRating %>
			</div>
			<div>Now Showing: </div>
			<div>
				<%= movie.nowShowing ? 'Yes' : 'Nope' %>
			</div>
			<div>Cast:</div>
			<ul>
				<% movie.cast.forEach(p => { %>
				 <li><%= p.name %> <small><%= p.born.toLocaleDateString() %></small></li>
				<% }) %>
			</ul>
		</section>

		<br><br>
		<form action="/movies/<%= movie._id %>/performers" method="POST">
			<select name="performerId" id="add-per-to-cast">
				<% performers.forEach(p => { %>
					<option value="<%= p._id %>"><%= p.name %></option>
				<% }) %>
			</select>
			<button type="submit">Add to Cast</button>
		</form>
		<br><br>
		<h2>Reviews</h2>
		<form id="add-review-form" method="POST" action="/movies/<%= movie._id %>/reviews">
			<label>Review:</label>
			<textarea name="content"></textarea>
			<label>Rating:</label>
			<select name="rating">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5" selected>5</option>
			</select>
			<input type="submit" value="Add Review">
		</form>
		
		<% if (movie.reviews.length) { %>
			<table>
			  <thead>
				<tr>
				  <th>Date</th>
				  <th>Review</th>
				  <th>Rating</th>
				</tr>
			  </thead>
			  <tbody>
				<% movie.reviews.forEach(function(r) { %>
				  <tr>
					<td><%= r.createdAt.toLocaleDateString() %></td>
					<td><%= r.content %></td>
					<td><%= r.rating %></td>
				  </tr>
				<% }); %>
			  </tbody>
			</table>
		  <% } else { %>
			<h5>No Reviews Yet</h5>
		  <% } %>
	</main>
</body>

</html>